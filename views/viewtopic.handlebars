<div class="container body-container my-border" id="topicList">
    <h3 class="viewTopic">{{data.title}}</h3>
    {{#each data.Posts}}
        <div class="row posts">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-2 userViewTopic">
                        <p>{{User.username}}</p>
                    </div>
                    <div class="col-md-8">
                        <p>{{updatedAt}}</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-10 col-md-offset-2 postContent">
                        <div id={{id}}></div>
                    </div>
                </div>
            </div>
        </div>
        <br>
    {{/each}}
    <a href="/post?tid={{data.id}}">Post Reply</a>
</div>
<script src="https://code.jquery.com/jquery.js"></script>
<script src="public/assets/javascript/marked.min.js"></script>
<script>
    $(document).ready(() => {
        {{#each data.Posts}}
            var post = `{{{post}}}`
            $("#{{id}}").html(marked(post));
        {{/each}}
    });
</script>
