<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>simpleBB</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="public/assets/css/main.css">
</head>

<body>
<div class="bigWrap">
    <!-- NAV -->
    <div class="navbarDiv clearfix " id="navbar">
        <div class="navbarmenu">
            <div class="col-sm-12" "panel-primary" style="background-color: #000000 ; color: #93CCEA;">

                <div class="flex logo-box">
                  <a href="/" class="logoA"><div>
                    <h2 class="text-left logo-title"><strong>simpleBB</strong></h2>
                    <h5 class="tagLine">a modularized bulletin board</h5>
                </div></a>
                  <div class="navbar"
                    <ul class="nav navbar-nav navbar-right navbar-right-custom">
                      <li class="navlinks"><a href="/" class="navlink">home</a></li>
                      {{#if userInfo}}
                          <li class="navlinks">logged in as {{userInfo.username}}</li>
                          <li class="navlinks"><a href="/logout" class="navlink">logout</a></li>
                      {{/if}}
                      {{#unless userInfo}}
                          <li class="navlinks"><a id="logOrReg" href="">register or log in</a></li>
                      {{/unless}}
                      </ul>
                  </div>
                </div>

            </div>
        </div>
    </div>

    <!-- BODY GENERATED THROUGH HANDLEBARS -->
    <div class="wrap">
        {{{body}}}
    </div>

    <!-- Footer Region -->
    <div id="footer clearfix">
        <div class="col-md-12 panel-primary ok">
            <div class="">
                <!-- Line Break followed by closing -->

                <h5 class="text-center"><medium>&copy simpleBB. All posts copyright their original authors</medium></h5>
            </div>
        </div>
    </div>

    <!-- Login Modal -->
    <div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header" style="text-align: center">
                    <h2>create an account or login</h2></div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-5" id="register-modal">
                            <form class="modal-form" id="register-form">
                                <div class="form-group">
                                    <input type="text" name="username" id="username-register" class="form-control input-sm" placeholder="Username" required>
                                </div>
                                <div class="form-group">
                                    <input type="email" name="email" id="email-register" class="form-control input-sm" placeholder="Email address" required>
                                </div>
                                <div class="form-group">
                                    <input type="password" name="password" id="password-register" class="form-control input-sm" placeholder="Password. Minimum 6 characters.">
                                </div>
                                <div class="form-group">
                                    <button class="btn btn-primary" type="submit" id="register" value="check">sign up</button>
                                </div>
                                <div class="failMsg" id="regFail"></div>
                            </form>
                        </div>
                        <div class="vertical-line col-md-1 col-md-offset-1" style="border-left: 2px solid black; height: 50%"></div>
                        <div class="col-md-5" id="login-modal">
                            <form class="modal-form" id="login-form" action="/login" method="POST">
                                <div class="form-group">
                                    <input type="text" name="username" id="username-register" class="form-control input-sm" placeholder="Username" required>
                                </div>
                                <div class="form-group">
                                    <input type="password" name="password" id="password-register" class="form-control input-sm" placeholder="Password" required>
                                </div>
                                <div class="form-group">
                                    <button class="btn btn-primary" type="submit" id="login">log in</button>
                                </div>
                                <div class="failMsg" id="logFail"></div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    <script src="https://code.jquery.com/jquery.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <script src="public/assets/javascript/main.js"></script>
</body>

</html>
