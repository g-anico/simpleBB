


<div class="container body-container my-border" id="topicList">
  <button class="newTopicButton"><a href="/post?fid={{data.id}}" id="submitTopic">Submit new topic</a></button>
    <div class="row">
        <h3>{{data.title}}</h3>
    </div>
    {{#each data.Topics}}
        <div class="row topic-rows">
            <div class="col-md-6 topic-titles">
                <a href="/viewtopic?id={{id}}"><h4>{{title}}</h4></a>
            </div>
            <div class="col-md-2 post-count">
                <p>{{Posts.length}}</p>
            </div>
            <div class="col-md-4 last-post">
                <p>{{Posts.0.updatedAt}}</p>
                <p>{{Posts.0.User.username}}
            </div>
        </div>
    {{/each}}

</div>
